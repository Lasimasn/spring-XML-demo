<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="MovieA" class="com.stackroute.domain.beans.Movie" scope="prototype">
        <constructor-arg name ="actor1" ref="actor"/>
        <constructor-arg name="actor2" ref="actor2" />
        <constructor-arg name="actor3" ref="actor3" />

    </bean>
    <bean id="MovieB" class="com.stackroute.domain.beans.Movie">
        <constructor-arg name ="actor1" ref="actor1" />
        <constructor-arg name="actor2" ref="actor2" />
        <constructor-arg name="actor3" ref="actor3" />

    </bean>
    <bean id="actor1" class="com.stackroute.domain.beans.Actor">
        <constructor-arg name="name" value="Sasi" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="40" />

    </bean>

    <bean id="actor3" class="com.stackroute.domain.beans.Actor">
        <constructor-arg name="name" value="Sona" />
        <constructor-arg name="gender" value="Female" />
        <constructor-arg name="age" value="49" />

    </bean>
    <bean id="actor2" class="com.stackroute.domain.beans.Actor">
        <constructor-arg name="name" value="Sasu" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="48" />

    </bean>

</beans>